.ui.segments.raised
      .ui.clearing.segment
        .ui.two.column.grid
          .row
            .column
              h2.ui.left.floated.header= blog.title
            .column
              form(action=`/blogs/${blog.id}/delete`, method="post")
                input(type="hidden", name="blogId", value= blog.id)
                .ui.mini.buttons.right.floated
                  a.ui.positive.button(href=`/blogs/${blog.id}/edit`) Edit
                  .or
                  input.ui.negative.button(type="submit", value="Delete")
          .row
            .column
              p.ui.left.floated.header= blog.author
            .column
              p.ui.right.floated.header(title=`${blog.time}`) #{blog.timeSince}
      .ui.secondary.segment
        p= blog.text