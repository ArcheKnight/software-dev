.ui.segments.raised
      .ui.clearing.segment
        .ui.two.column.grid
          .row
            .column
              h2.ui.left.floated.header.blog-title= blog.title
            .column
              form(action=`/blogs/${blog._id}/delete`, method="post")
                input(type="hidden", name="blogId", value= blog._id)
                .ui.mini.buttons.right.floated
                  a.ui.positive.button(href=`/blogs/${blog._id}/edit`) Edit
                  .or
                  input.ui.negative.button(type="submit", value="Delete")
          .ui.divider
          .row
            .column
              p.ui.left.floated.header.blog-author By: #{blog.author.name}
            .column
              p.ui.right.floated.header.blog-time(title=`${blog.time}`) Added #{res.locals.timeSince}
      .ui.secondary.segment
        p.blog-text #{blog.body}